<% content_for :head do %>
 This is the content for head
<% end %>
<p id="notice"><%= notice %></p>

<legend>Purchases</legend>

<div class="tab_botao">
  <%= link_to 'New Purchaser', new_purchaser_path %> / <%= link_to 'UpLoad de Dados', 'arquivos/index' %>
</div>

    <table cellpadding="0" cellspacing="1" class="Cabecalho">
  <thead>
          <tr class="Cabecalho_bg">
      <th align="left" style="padding-left: 5px;padding-right: 5px;">Purchaser name</th>
      <th align="center" style="padding-left: 5px;padding-right: 5px;">Purchaser count</th>
      <th align="left" style="padding-left: 5px;padding-right: 5px;">Item description</th>
      <th  align="right" style="padding-left: 5px;padding-right: 5px;">Item price</th>
      <th align="left" style="padding-left: 5px;padding-right: 5px;">Merchant name</th>
      <th align="left" style="padding-left: 5px;padding-right: 5px;">Merchant address</th>
      <th  align="center" style="padding-left: 5px;padding-right: 5px;" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchasers.each do |purchaser| %>
      <tr>
        <td><%= purchaser.purchaser_name %></td>
        <td style="text-align:center;"><%= purchaser.purchaser_count %></td>
        <td align="left" style="padding-left: 5px;padding-right: 5px;"><%= purchaser.item_description %></td>
        <td style="text-align:right;">R$ <%= purchaser.item_price %></td>
        <td align="left" style="padding-left: 5px;padding-right: 5px;"><%= purchaser.merchant_name %></td>
        <td align="left" style="padding-left: 5px;padding-right: 5px;"><%= purchaser.merchant_address %></td>
        <td><%= link_to 'Show', purchaser %></td>
        <td></td>
	        
        <td><%= link_to 'Destroy', purchaser, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


